<main id="studentProfile" class="profiles">
    <div id="shownInfo">
        <h2>{{user.username}}</h2>
        <h3>{{user.name.firstName}} {{user.name.lastName}}</h3>
        <h5>Email: {{user.email}}</h5>
        {{#if self}}
        <h5>Graduation Year: {{user.year}}</h5>
        <label for="tutorList">Tutors</label>
        <ul id="tutorList">
            {{#each tutors}}
            <li></li>
            {{/each}}
        </ul>
        <label for="relevantSubjects">I need help in:</label>
        <ul id="relevantSubjects">
            {{#each user.relevantSubjects}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <div id="questionLinks">
            {{#each user.questionIDs}}
            <a>{{this}}</a>
            {{/each}}
        </div>
        <button id="userInfoChange">Change User Information</button>
        <button id="passwordChange">Change Password</button>
        {{else}}
            {{#if tutor}}        
                <ul id="relevantSubjects">
                    {{#each user.relevantSubjects}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <div id="questionLinks">
                    {{#each user.questionIDs}}
                    <a></a>
                    {{/each}}
                </div>
            {{/if}}
        {{/if}}
    </div>

    <div id="passwordChangeForm">
        <form id="passChange">
            <label for="currentPassword">Current Password:</label>
            <input name="currentPassword" id="currentPassword" type="password">
            <label for="newPassword">New Password</label>
            <input name="newPassword" id="newPassword" type="password">
            <label for="confirmPassword">Confirm Password</label>
            <input name="confirmPassword" id="confirmPassword" type="password">
            <button type="submit">Submit</button>
            <button class="return">Return to Profile</button>
        </form>
    </div>

    <div id="userInfoChangeForm">
        <form id="infoChange">
            <label for="username">Username:</label>
            <input name="username" id="username" type="text">

            <label for="profilePicture">Profile Picture:</label>
            <input name="profilePicture" id="profilePicture" type="file" accept="image/.*">

            <label for="firstName">First Name:</label>
            <input name="firstName" id="firstName" type="text" value={{firstName}}>

            <label for="lastName">Last Name:</label>
            <input name="lastName" id="lastName" type="text">

            <label for="email">Email:</label>
            <input name="email" id="email" type="email">

            <label for="relevantSubjects">Subjects:</label>
            <input>

            <label for="year">Graduation Year:</label>
            <input name="year" id="year" type="number">

            <button type="submit">Submit</button>
            <button class="return">Return to Profile</button>
        </form>
    </div>
    
</main>


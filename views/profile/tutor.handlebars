<main id="tutorProfile" class="profiles">
    <div id="shownInfo">
        <h2>{{user.username}} - Tutor</h2>
        <h3>{{user.name.firstName}} {{user.name.lastName}}</h3>
        {{#if isBeingTutored}}
        <h5>Email: {{email}}</h5>
        {{/if}}
        <h5>Graduation Year: {{user.year}}</h5>
        <label for="relevantSubjects">I'm happy to help you with:</label>
        <ul id="relevantSubjects">
            {{#each user.relevantSubjects}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <div id="questionLinks">
            {{#each questions}}
            <a></a>
            {{/each}}
        </div>
        {{#if self}}
        <button id="userInfoChange">Change User Information</button>
        <button id="passwordChange">Change Password</button>
        {{else}}
        <div id="ratingSection"></div>
        <button id="ratingButton">Rate {{user.name.firstName}}</button>
        {{/if}}

    </div>

    <div id="passwordChangeForm">
        <form id="passChange">
            <label for="currentPassword">Current Password:</label>
            <input name="currentPassword" id="currentPassword" type="password">
            <label for="newPassword">New Password</label>
            <input name="newPassword" id="newPassword" type="password">
            <label for="confirmPassword">Confirm Password</label>
            <input name="confirmPassword" id="confirmPassword" type="password">
            <button type="submit">Submit</button>
            <button class="return">Return to Profile</button>
        </form>
    </div>

    <div id="userInfoChangeForm">
        <form id="infoChange">
            <label for="username">Username:</label>
            <input name="username" id="username" type="text">

            <label for="profilePicture">Profile Picture:</label>
            <input name="profilePicture" id="profilePicture" type="file" accept="image/.*">

            <label for="firstName">First Name:</label>
            <input name="firstName" id="firstName" type="text" value={{firstName}}>

            <label for="lastName">Last Name:</label>
            <input name="lastName" id="lastName" type="text">

            <label for="email">Email:</label>
            <input name="email" id="email" type="email">

            <label for="relevantSubjects">Subjects:</label>
            <input name="relevantSubjects" id="relevantSubjects" type="text">

            <label for="year">Graduation Year:</label>
            <input name="year" id="year" type="number">

            <button type="submit">Submit</button>
            <button class="return">Return to Profile</button>
        </form>
    </div>

    <div id="ratingFormSection">
        <form id="ratingForm">
            <label for="rating">Rate your experience with {{user.name.firstName}} (1-10):</label>
            <input type="number" name="rating" id="rating" min="1" max="10" step="1">
            <button type="submit">Submit</button>
        </form>
        <button class="return">Return to Profile</button>
    </div>
</main>

<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="/public/js/profileEdit.js"></script>
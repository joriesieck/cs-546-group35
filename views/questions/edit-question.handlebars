<main>
    <form id="edit-question-form">
        <label for="update-title">Enter a title:</label>
        <input type="text" id="update-title" placeholder="Title">

        <label for="update-body">Enter a question:</label>
        <input type="text" id="update-body" placeholder="Question">

        <label for="update-tags">Enter at most 3 new tag(s) for the question, separated by a comma:</label>
        <input type="text" id="update-tags" placeholder="Tags (English, Math, Science, Web Programming, etc.)">

        <button type="submit" id='submit-edit-question'>Submit</button>
    </form>

    <ul id="edit-question-errors-list" class="error" hidden></ul>
</main>

